<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat de Lucas</title>
    <link rel="stylesheet" href="estilos.css">
    
    <script src="./socket.io/socket.io.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
    <h1> Chat Luquitas</h1>
    <div id='container_chat' class='container'>
        <div>
            <form id='data_user'>
                <div>
                    <input id='name-user' type="text" placeholder="ingrese su nombre">
                    <input id='email-user' type="email" placeholder="ingrese su mail">
                    <input class="btn_submit" type="submit" value="Ingresar">
                </div>
            </form>
        </div>
        <div>
            <div class="prods_cont">
                <h3>Ingrese Productos</h3>
                <form id='data_prods'>
                    <div>
                        <input id='name-prod' type="text" placeholder="ingrese el nombre">
                        <input id='price-prod' type="number" placeholder="ingrese el precio">
                        <input id='imageurl-prod' type="url" placeholder="ingrese el url de la imagen">
                        <button id='send-prod'>Agregar Producto</button>
                    </div>
                </form>
                <!-- <ul id="product_list"> -->
                <table  class="table">
                    <thead>
                        <tr>
                        <th scope="col">ID#</th>
                        <th scope="col">Producto</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Imagen</th>
                        </tr>
                    </thead>
                    <tbody id="product_list">
                        <tr>

                        </tr>
                    </tbody>
                </table>
                <!-- </ul> -->
            </div>
            <div class="chat_cont">
                <div>
                    <h3>El chat!!!</h3>
                    <input type="text" id='inputtext' placeholder="ingrese texto">
                    <button id="sendmsj">Enviar</button>
                    <p id='contenedor_texto'></p>
                </div>
                <div class='users'>
                    <div>
                        <h5>Usuarios conectados</h5>
                    </div>
                    <ul id='user_list'>
                        <li>

                        </li>
                    </ul>
                </div>
            </div>
            
        </div>
    </div>
    
    
<script src="./js.js"></script>



</body>
</html>